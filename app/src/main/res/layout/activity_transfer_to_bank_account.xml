<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TransferToBankAccount">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
    >

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2" app:icon="@drawable/back_icon"
                app:iconTint="#050505" android:backgroundTint="@android:color/transparent" android:onClick="back"
                android:text="More" android:textColor="#1B1B1B"/>

        <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:textColor="#FF673AB7"
                android:text="History"
                android:background="transparent"
              />
    </LinearLayout>
    <TextView
            android:text="    Free Transfer"
            android:textColor="#673AB7"
            android:textSize="14sp"
            android:padding="5dp"
            android:background="@drawable/border_radius"
            android:backgroundTint="#C1A5F3"
            android:layout_width="378dp"
            android:layout_height="wrap_content" android:id="@+id/textView18" tools:layout_editor_absoluteY="71dp"
            tools:layout_editor_absoluteX="16dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/border_radius"
            android:backgroundTint="@color/white"
            android:layout_width="378dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484" app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            android:layout_marginTop="124dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0">
        <TextView
                android:text="Recieptian Account"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView20"/>
        <EditText
                android:layout_width="match_parent"
                android:background="transparent"
                android:hint="Enter Amount"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/editTextText"/>

        <EditText
                android:layout_width="match_parent"
                android:background="transparent"
                android:hint="Enter the Account Number"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:inputType="text"
                android:ems="120"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="transparent"
                android:text="Select Bank"
                android:textColor="#B6B5B5"
                android:textAlignment="viewStart"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/editTextText2" app:icon="@drawable/arrow" app:iconGravity="end"
                app:iconTint="#000000" app:iconSize="24dp"/>
        <Button
                android:text="Button"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" android:id="@+id/button10"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>