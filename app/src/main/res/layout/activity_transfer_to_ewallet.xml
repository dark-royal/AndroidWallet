<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TransferToEWallet">

    <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:layout_marginTop="196dp"
            android:id="@+id/linearLayout12">

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <LinearLayout android:layout_width="110dp"
                          android:layout_height="50dp"
                          android:layout_marginRight="10dp"
                          android:gravity="center"
                          android:background="@drawable/amout_radius"
                          android:orientation="vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:textStyle="bold"

                          android:text="500.00" android:textSize="19sp"/>

            </LinearLayout>

            <LinearLayout android:layout_width="110dp"
                          android:layout_height="50dp"
                          android:layout_marginRight="10dp"
                          android:gravity="center"
                          android:orientation="vertical" android:background="@drawable/amout_radius"
            >

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:textStyle="bold"
                          android:text="1,000.00" android:textSize="19sp"/>

            </LinearLayout>
            <LinearLayout android:layout_width="110dp"
                          android:layout_height="50dp"
                          android:gravity="center"
                          android:orientation="vertical" android:background="@drawable/amout_radius"
            >

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:textStyle="bold"
                          android:text="2,000.00" android:textSize="19sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dp"
                      android:orientation="horizontal">
            <LinearLayout android:layout_width="110dp"
                          android:layout_height="50dp"
                          android:layout_marginRight="10dp"
                          android:gravity="center"
                          android:orientation="vertical" android:background="@drawable/amout_radius"
            >

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:textStyle="bold"

                          android:text="5,000.00" android:textSize="19sp"/>

            </LinearLayout>

            <LinearLayout android:layout_width="110dp"
                          android:layout_height="50dp"
                          android:layout_marginRight="10dp"
                          android:gravity="center"
                          android:orientation="vertical" android:background="@drawable/amout_radius"
            >

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:textStyle="bold"
                          android:text="10,000.00" android:textSize="19sp"/>

            </LinearLayout>
            <LinearLayout android:layout_width="110dp"
                          android:layout_height="50dp"
                          android:gravity="center"
                          android:orientation="vertical" android:background="@drawable/amout_radius"
            >

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:textStyle="bold"
                          android:text="15,000.00" android:textSize="19sp"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_marginTop="20dp"
                      android:layout_height="wrap_content" android:orientation="horizontal">
            <LinearLayout android:layout_width="110dp"
                          android:layout_height="match_parent"

                          android:layout_marginRight="10dp"
                          android:gravity="center"
                          android:orientation="vertical" android:background="@drawable/amout_radius"
            >

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:textStyle="bold"

                          android:text="20,000.00" android:textSize="19sp"/>

            </LinearLayout>

            <LinearLayout android:layout_width="110dp"
                          android:layout_height="50dp"
                          android:layout_marginRight="10dp"
                          android:gravity="center"
                          android:orientation="vertical" android:background="@drawable/amout_radius"
            >

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:textStyle="bold"
                          android:text="25,000.00" android:textSize="19sp"/>

            </LinearLayout>
            <LinearLayout android:layout_width="110dp"
                          android:layout_height="50dp"
                          android:gravity="center"
                          android:orientation="vertical" android:background="@drawable/amout_radius"
            >

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:textStyle="bold"
                          android:text="30,000.00" android:textSize="19sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
    >

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2" app:icon="@drawable/back_icon"
                app:iconTint="#050505" android:backgroundTint="@android:color/transparent" android:onClick="back"
                android:text="More" android:textColor="#1B1B1B"/>

        <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:textColor="#FF673AB7"
                android:text="History"
                android:background="transparent"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/border_radius"
            android:backgroundTint="@color/white"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484" app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            android:layout_marginTop="124dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0">

    <EditText
            android:layout_width="match_parent"
            android:background="transparent"
            android:hint="Enter Amount"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextText" tools:layout_editor_absoluteY="97dp" tools:layout_editor_absoluteX="0dp"/>
    </LinearLayout>
    <Button
            android:text="Button"
            android:layout_gravity="bottom"
            android:layout_width="316dp"
            android:layout_height="50dp" android:id="@+id/button10"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintTop_toBottomOf="@+id/editText"
            android:layout_marginTop="268dp"/>
    <EditText
            android:layout_width="369dp"
            android:background="transparent"
            android:hint="Other Amount"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="120" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
            android:layout_marginTop="8dp" android:id="@+id/editText"/>

</androidx.constraintlayout.widget.ConstraintLayout>