<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DashboardActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="314dp"
            android:background="#270684" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout4" android:gravity="center_horizontal">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_marginStart="15dp"
                    android:layout_width="56dp"
                    android:layout_height="47dp" app:srcCompat="@drawable/default_avatar"
                    android:id="@+id/imageView3"

                    android:layout_gravity="left|center_vertical"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <TextView
                            android:text="Hello,"
                            android:layout_width="wrap_content"
                            android:textSize="24sp"
                            android:layout_height="wrap_content" android:id="@+id/greet"
                            android:textColor="#FDFCFC"/>
                    <Space
                            android:layout_width="219dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginRight="19dp"
                            android:layout_height="match_parent" android:id="@+id/button4"
                            android:contentDescription="TODO" app:srcCompat="@drawable/settings"/>
                </LinearLayout>
                <TextView
                        android:text="Name"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content" android:id="@+id/textView10" android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="215dp" android:background="@drawable/border_radius"
                    android:backgroundTint="#45279D">
                <TextView
                        android:text="Main balance"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView11" android:textColor="#A29B9B"
                        android:textSize="16sp"/>
                <TextView
                        android:text="$14,233.00"
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:layout_height="wrap_content" android:id="@+id/textView12" android:textColor="#FFFFFF"
                        android:textStyle="bold" android:textSize="35sp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="71dp" android:background="#45279E" android:gravity="center">
                    <Button
                            android:text="Top Up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/button5"
                            android:background="@android:color/transparent" app:icon="@drawable/download_up"
                            android:drawableTop="@drawable/download_up" app:iconGravity="top" app:iconSize="16dp"
                            android:textSize="16sp"/>

                    <View android:layout_width="1dp"
                          android:layout_height="30dp"
                          android:background="#270683"/>

                    <Button
                            android:text="Withdraw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/button6"
                            app:iconGravity="top" app:icon="@drawable/withdraw_icon" app:iconSize="16dp"
                            android:background="@android:color/transparent" android:textSize="16sp"/>
                    <View android:layout_width="1dp"
                          android:layout_height="30dp"
                          android:background="#270683"/>
                    <Button
                            android:text="Transfer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/button7"
                            app:icon="@drawable/transfer" app:iconGravity="top"
                            android:background="@android:color/transparent" android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:text="Recent Transfers"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.052"
            android:textSize="25sp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/recentTransfer" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView13" app:layout_constraintVertical_bias="0.0"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/linearLayout5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="192dp"
            app:layout_constraintTop_toBottomOf="@+id/recentTransfer" app:layout_constraintVertical_bias="0.114">
        <TextView
                android:text="Latest Transactions"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView14" android:layout_weight="1"
                android:textSize="25sp" android:layout_marginLeft="10dp"/>
        <Button
                android:text="View all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button8"
                android:background="@android:color/transparent" android:hapticFeedbackEnabled="true"
                android:textColor="#FF673AB7" android:textSize="16sp" android:onClick="viewAllTrans"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="409dp"
            android:layout_height="78dp"
            android:id="@+id/linearLayout6" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <include layout="@layout/bottom_nav"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="179dp"
            android:id="@+id/latestTran" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout6" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>