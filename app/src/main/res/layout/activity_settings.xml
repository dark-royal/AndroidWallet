<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Settings">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
    >

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2" app:icon="@drawable/back_icon"
                app:iconTint="#050505" android:backgroundTint="@android:color/transparent" android:onClick="back"
                android:text="More" android:textColor="#1B1B1B"/>

        <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:textColor="#FF673AB7"
                android:text="History"
                android:background="transparent"
        />
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_width="406dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout15"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout17">

        <Button
                android:text="About The Team"
                android:layout_height="70dp" android:id="@+id/button14"
                android:drawableLeft="@drawable/transaction_history"
                android:drawableRight="@drawable/arrow"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="transparent"
                android:gravity="left|center"
                android:layout_width="match_parent" android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_width="406dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="5dp"
            android:id="@+id/linearLayout14" tools:layout_editor_absoluteY="64dp">
        <Button
                android:text="Change Name"
                android:layout_marginTop="10dp"
                android:layout_height="70dp" android:id="@+id/button14"
                android:drawableLeft="@drawable/transaction_history"
                android:drawableRight="@drawable/arrow"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="transparent"
                android:gravity="left|center"
                android:layout_width="match_parent"/>
        <Button
                android:text="Change Email"
                android:layout_marginTop="10dp"
                android:layout_height="70dp" android:id="@+id/button14"
                android:drawableLeft="@drawable/transaction_history"
                android:drawableRight="@drawable/arrow"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="transparent"
                android:gravity="left|center"
                android:layout_width="match_parent"/>
        <Button
                android:text="Change Password"
                android:layout_marginTop="10dp"
                android:layout_height="70dp" android:id="@+id/button14"
                android:drawableLeft="@drawable/transaction_history"
                android:drawableRight="@drawable/arrow"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="transparent"
                android:gravity="left|center"
                android:layout_width="match_parent"/>
        <Button
                android:text="Security Question"
                android:layout_marginTop="10dp"
                android:layout_height="70dp" android:id="@+id/button14"
                android:drawableLeft="@drawable/transaction_history"
                android:drawableRight="@drawable/arrow"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="transparent"
                android:gravity="left|center"
                android:layout_width="match_parent"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_width="406dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="2dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout14"
            android:layout_marginTop="32dp" android:id="@+id/linearLayout15">
        <Button
                android:text="Close Account"
                android:layout_marginTop="10dp"
                android:layout_height="70dp" android:id="@+id/button14"
                android:drawableLeft="@drawable/transaction_history"
                android:drawableRight="@drawable/arrow"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="transparent"
                android:gravity="left|center"
                android:layout_width="match_parent"/>
        <Button
                android:text="Our Centers"
                android:layout_marginTop="10dp"
                android:layout_height="70dp" android:id="@+id/button14"
                android:drawableLeft="@drawable/transaction_history"
                android:drawableRight="@drawable/arrow"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="transparent"
                android:gravity="left|center"
                android:layout_width="match_parent"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_width="406dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout16" android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout17">

        <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button11"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>