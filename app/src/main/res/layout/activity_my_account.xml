<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyAccount">
    <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_width="406dp"
            android:layout_height="262dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13"
            android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <Button
                android:text="Contact Us"
                android:layout_marginTop="10dp"
                android:layout_height="70dp" android:id="@+id/button14"
                android:drawableLeft="@drawable/contact_us"
                android:drawableRight="@drawable/arrow"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="transparent"
                android:gravity="left|center"
                android:layout_width="match_parent"/>
        <Button
                android:text="About Us"
                android:layout_marginTop="10dp"
                android:layout_height="70dp"
                android:drawableLeft="@drawable/account_limit"
                android:drawableRight="@drawable/arrow"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="transparent"
                android:gravity="left|center"
                android:layout_width="match_parent"/>
        <Button
                android:text="Rate Us"
                android:layout_marginTop="10dp"
                android:layout_height="70dp"
                android:drawableLeft="@android:drawable/btn_star"
                android:drawableRight="@drawable/arrow"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="transparent"
                android:gravity="left|center"
                android:layout_width="match_parent"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/edit_text_radius"
            android:backgroundTint="#270684" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout8">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="UselessParent">
            <ImageView
                    android:layout_marginStart="15dp"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/default_avatar"
                    android:id="@+id/imageView3"

                    android:layout_gravity="left|center_vertical"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <TextView
                            android:text="Hello,"
                            android:layout_width="wrap_content"
                            android:textSize="24sp"
                            android:layout_height="wrap_content" android:id="@+id/greet"
                            android:textColor="@color/white"/>
                    <Space
                            android:layout_width="219dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                </LinearLayout>
                <TextView
                        android:text="Name"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_width="406dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
            android:layout_marginTop="32dp" android:id="@+id/linearLayout13"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <Button
                android:text="Transactions History"
                android:layout_marginTop="10dp"
                android:layout_height="70dp"
                android:drawableLeft="@drawable/transaction_history"
                android:drawableRight="@drawable/arrow"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="transparent"
                android:gravity="left|center"
                android:layout_width="match_parent"/>
        <Button
                android:text="Account Limits"
                android:layout_marginTop="10dp"
                android:layout_height="70dp"
                android:drawableLeft="@drawable/contact_us"
                android:drawableRight="@drawable/arrow"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="transparent"
                android:gravity="left|center"
                android:layout_width="match_parent"/>
        <Button
                android:text="My Wallet"
                android:layout_marginTop="10dp"
                android:layout_height="70dp"
                android:drawableLeft="@drawable/my_wallet"
                android:drawableRight="@drawable/arrow"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="transparent"
                android:gravity="left|center"
                android:layout_width="match_parent"/>
        <Button
                android:text="Bank Card"
                android:layout_marginTop="10dp"
                android:layout_height="70dp"
                android:drawableLeft="@drawable/cards"
                android:drawableRight="@drawable/arrow"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="transparent"
                android:gravity="left|center"
                android:layout_width="match_parent"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="409dp"
            android:layout_height="78dp"
            android:id="@+id/linearLayout6" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <include layout="@layout/bottom_nav"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>