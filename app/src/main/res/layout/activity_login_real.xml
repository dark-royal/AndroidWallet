<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="86dp"
            android:layout_height="57dp" tools:layout_editor_absoluteY="106dp" tools:layout_editor_absoluteX="162dp">
        <ImageView
                android:layout_width="61dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_launcher_foreground"
                android:id="@+id/imageView" android:layout_weight="1" android:layout_margin="10dp"/>
    </LinearLayout>
    <TextView
            android:text="Sign in Your Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView" tools:layout_editor_absoluteY="249dp"
            tools:layout_editor_absoluteX="16dp" android:textColor="#000000" android:textSize="34sp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="413dp"
            android:layout_height="70dp"
            android:gravity="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.026">
        <TextView
                android:text="Email"
                android:layout_width="394dp"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:textColor="#000000"
                android:textSize="16sp"/>
        <EditText
                android:layout_width="374dp"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editTextTextEmailAddress"
                android:autofillHints=""
                android:hint="    ex: example12@gmail.com"
                android:background="@drawable/edit_text_radius"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="413dp"
            android:layout_height="70dp"
            android:gravity="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.267" android:id="@+id/linearLayout">
        <TextView
                android:text="Password"
                android:layout_width="394dp"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:textColor="#000000"
                android:textSize="16sp"/>
        <EditText
                android:layout_width="374dp"
                android:layout_height="40dp"
                android:inputType="text|textPassword"
                android:ems="10"
                android:id="@+id/editTextTextEmailAddress"
                android:autofillHints=""
                android:hint="    ***************"
                android:background="@drawable/edit_text_radius"/>
    </LinearLayout>
    <Button
            android:text="Sign In"
            android:layout_width="363dp"
            android:layout_height="45dp" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="47dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:textSize="16sp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="408dp"
            android:layout_height="30dp" tools:layout_editor_absoluteY="598dp" tools:layout_editor_absoluteX="1dp"
            android:gravity="center">
        <TextView
                android:text="Don't have an account?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"/>
        <TextView
                android:text="SignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7"
                android:textColor="#E82E2E" android:textStyle="bold"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>