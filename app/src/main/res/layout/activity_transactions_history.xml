<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TransactionHistory">
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="409dp"
            android:layout_height="73dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/bottomNavigationView">
        <include layout="@layout/bottom_nav"/>

    </com.google.android.material.bottomnavigation.BottomNavigationView>
    <RelativeLayout android:layout_width="410dp" android:layout_height="104dp"
                    android:background="@color/white" android:id="@+id/relativeLayout"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="1dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/relativeLayout2">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="68dp" tools:layout_editor_absoluteY="1dp" tools:layout_editor_absoluteX="1dp"
                android:layout_alignParentStart="true" android:layout_marginStart="0dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="36dp"
                android:layout_marginTop="0dp" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp">
            <Button
                    android:text="Button"
                    android:textColor="#838282"
                    app:icon="@drawable/arrow_left"
                    app:iconSize="40dp"
                    app:iconTint="#838282"
                    android:textSize="50px"
                    android:gravity="left|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button12"
                    android:background="@android:color/transparent"/>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" android:layout_weight="1"/>
            <Button
                    android:text="Download"
                    android:textSize="16sp"
                    android:textColor="#C997F4"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button13"
                    android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal" android:layout_alignParentBottom="true"
                      android:layout_marginBottom="6dp" android:layout_marginTop="74dp"
                      android:layout_alignParentTop="true">
            <Spinner android:layout_width="wrap_content"
                     android:id="@+id/categoryDrop"
                     android:layout_height="wrap_content"
                     android:dropDownWidth="match_parent"
                     android:spinnerMode="dropdown"/>

            <Space android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
            <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:layout_gravity="right" android:dropDownWidth="match_parent"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="694dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/relativeLayout2">

        <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView4"
                 android:layout_marginTop="3dp" android:layout_alignParentTop="true"
                 android:layout_alignParentEnd="true" android:layout_marginEnd="285dp"
                 android:layout_alignParentStart="true" android:layout_marginStart="8dp"
        />
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerView2"
                android:layout_marginBottom="9dp" android:layout_alignParentBottom="true"
                android:layout_marginTop="4dp" android:layout_below="@+id/textView4"
                android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"
                android:layout_alignParentStart="true" android:layout_marginStart="0dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>