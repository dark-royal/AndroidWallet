    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent" android:orientation="vertical">
        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/avatarCont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" android:layout_marginTop="10dp">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" app:srcCompat="@drawable/circle" android:id="@+id/myAccount"
            />
            <TextView
                    android:text="Add"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/avatarName" android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content" android:id="@+id/transCont"
                android:background="@drawable/demacator">
            <ImageView
                    android:layout_width="51dp"
                    android:layout_height="59dp" app:srcCompat="@drawable/default_avatar"
                    android:id="@+id/transAvatar" android:contentDescription="TODO"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/transactionCont"
                    android:layout_width="198dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Top Up"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tranName"/>
                <TextView
                        android:text="Today 12:32"
                        android:textSize="15sp"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/tranDate"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="right|center_vertical"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="-₦35.23"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:id="@+id/transAmount"
                        android:background="@android:color/transparent" android:textColor="#EF1A1A"
                        tools:ignore="RtlCompat"/>
                <ImageView
                        android:layout_width="39dp"
                        android:layout_height="match_parent" app:srcCompat="@drawable/arrow"

                        android:id="@+id/imageView2" android:backgroundTint="@color/black"/>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:gravity="clip_vertical"
            android:layout_marginStart="10dp"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content" android:id="@+id/eachTransCont"
            android:background="@drawable/demacator" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarCont">
        <ImageView
                android:layout_width="51dp"
                android:layout_height="59dp" app:srcCompat="@drawable/default_avatar"
                android:id="@+id/eachTransAvatar" android:contentDescription="TODO"/>
        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/eachTransactionCont"
                android:layout_width="194dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
            <TextView
                    android:text="Top Up"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/eachTranName"/>
            <TextView
                    android:text="Today 12:32"
                    android:textSize="15sp"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/eachTranDate"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:gravity="right|center_vertical"
                android:textSize="25sp"
                android:layout_width="113dp"
                android:layout_height="match_parent">
            <TextView
                    android:text="-₦35.23"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:id="@+id/eachTransAmount"
                    android:background="@android:color/transparent" android:textColor="#EF1A1A"
                    tools:ignore="RtlCompat"/>
            <TextView
                    android:text="Successful"
                    android:background="@drawable/edit_text_radius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView15" android:backgroundTint="#C997F4"
                    android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_marginTop="5dp"
                    android:focusableInTouchMode="true"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>