<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:background="#FDFDFD">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="86dp"
            android:layout_height="57dp"
            android:id="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.111">
        <ImageView
                android:layout_width="61dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_launcher_foreground"
                android:id="@+id/imageView" android:layout_weight="1" android:layout_margin="10dp"/>
    </LinearLayout>
    <TextView
            android:text="Sign in Your Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textColor="#000000" android:textSize="34sp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.031" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.163"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.023" app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/linearLayout3">
        <TextView
                android:text="Email"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_email" android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>

        <EditText
                android:layout_width="327dp"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/et_EmailAddress"
                android:autofillHints=""
                android:hint="    ex: example12@gmail.com"
                android:background="@drawable/edit_text_radius"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ll_password"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintVertical_bias="0.006">
        <TextView
                android:text="Password"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tv_password" android:textColor="#000000"
                android:textSize="16sp"/>
        <EditText
                android:layout_width="327dp"
                android:layout_height="40dp"
                android:inputType="text|textPassword"
                android:ems="10"
                android:id="@+id/editTextTextEmailAddress"
                android:autofillHints=""
                android:hint="    ***************"
                android:background="@drawable/edit_text_radius"/>
    </LinearLayout>
    <Button
            android:text="Sign In"
            android:layout_width="327dp"
            android:layout_height="45dp" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.333" android:layout_marginBottom="284dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="408dp"
            android:layout_height="30dp"
            android:gravity="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="23dp" app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0">
        <TextView
                android:text="Don't have an account?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"/>
        <TextView
                android:text="SignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7"
                android:textColor="#E82E2E" android:textStyle="bold"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                            android:id="@+id/group"/>
</androidx.constraintlayout.widget.ConstraintLayout>